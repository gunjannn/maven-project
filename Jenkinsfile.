pipeline {
stages {
stage('Cloning our Git') {
steps {
git credentialsId: 'github', url: 'https://github.com/gunjannn/maven-project'
}
}
{
stage('package')
{
steps
  {
withMaven(jdk: 'localjdk', maven: 'localmaven') {
    sh 'mvn package'
   }
stage('Building our image') {
steps{
script {
dockerImage = docker.build registry + ":$BUILD_NUMBER"
}
}
}
stage('Deploy our image') {
steps{
script {
docker.withRegistry( 'https://hub.docker.com/repository/docker/dockergunn/tomcat', Gunn@1406 ) {
dockerImage.push()
}
}
}
}
}
}
}
}
}
