node {
stages {
stage('Cloning our Git') {
steps {
git credentialsId: 'github', url: 'https://github.com/gunjannn/maven-project'
}
}
{
stage('package')
{
steps
  {
withMaven(jdk: 'localjdk', maven: 'localmaven') {
    sh 'mvn package'
   }
stage('Building our image') {
steps{
sh 'docker build -t dockergunn/tomcat:1.0.0 .'
}
}

stage('pushing our image') {
steps{
sh 'docker login -u dockergunn -p $(dockerhubaccount)'
sh 'docker push dockergunn/tomcat:1.0.0'
}
stage('removing old containers'){
steps{
def dockerRM = 'docker rm -f tomcat'
}
}
}
}
}
}
}
}
